using priorochka;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace priorochka
{
    public class Money
    {
        public int Rubles { get; set; }
        public int Kopeks { get; set; }

        public Money(int rubles, int kopeks)
        {
            Rubles = rubles;
            Kopeks = kopeks;
            Normalize();
        }

        private void Normalize()
        {
            if (Kopeks >= 100)
            {
                Rubles += Kopeks / 100;
                Kopeks = Kopeks % 100;
            }
        }

        public static Money operator +(Money m1, Money m2)
        {
            int totalRubles = m1.Rubles + m2.Rubles;
            int totalKopeks = m1.Kopeks + m2.Kopeks;
            return new Money(totalRubles, totalKopeks);
        }

        public static bool operator ==(Money m1, Money m2)
        {
            if (ReferenceEquals(m1, m2)) return true;
            if (m1 is null || m2 is null) return false;
            return m1.Rubles == m2.Rubles && m1.Kopeks == m2.Kopeks;
        }

        public static bool operator !=(Money m1, Money m2)
        {
            return !(m1 == m2);
        }

        public override bool Equals(object obj)
        {
            return this == (obj as Money);
        }

        public override int GetHashCode()
        {
            return Rubles.GetHashCode() & Kopeks.GetHashCode();
        }

        public override string ToString()
        {
            return $"{Rubles} руб. {Kopeks} коп";
        }
    }
}
internal class Program
{
    static void Main(string[] args)
    {
        var m1 = new Money(10, 50);
        var m2 = new Money(5, 75);
        Console.WriteLine(m1 + m2);
        Console.WriteLine(m1 == new Money(10, 50));
        Console.WriteLine(m1 != m2);
    }
}
